<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sepcial_itme_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/article_itme_icon"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="#CCCCCC"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/article_itme_icon"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/article_itme_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="新闻反反复复反反复复反反复复反反复复反反复复反fffffffffffffffffffffffffff反复复反反复复反反复复吩咐"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/article_itme_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="新闻反反复复反反复复反反复复反反复复反反复复反反复复反反复复反复复反反复复反反复复反反复复反反复复反复复反反复复反反复复反反复复反反复复反复复反反复复反反复复反反复复反反复复反复复反反复复反反复复反反复复反反复复反反复复吩咐"
                android:textColor="#8b8b8b"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/article_itme_type"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="新闻"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/article_itme_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="10分钟前"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>