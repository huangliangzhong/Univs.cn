<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <include layout="@layout/univs_layout_head_view" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/barline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="角色"
            android:textColor="#a1a7bc"
            android:textSize="24px" />

        <EditText
            android:id="@+id/xiaoneiinfos_juese_et"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="教师"
            android:textColor="#a1a7bc"
            android:textSize="24px" />

        <ImageButton
            android:id="@+id/xiaoneiinfos_juese_bt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:src="@drawable/joinico" >
        </ImageButton>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/driver_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="地区"
            android:textColor="#a1a7bc"
            android:textSize="24px" />

        <EditText
            android:id="@+id/xiaoneiinfos_diqu_et"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="北京通州区"
            android:textColor="#a1a7bc"
            android:textSize="24px" />

        <ImageButton
            android:id="@+id/xiaoneiinfos_diqu_bt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:src="@drawable/joinico" >
        </ImageButton>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/driver_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="学校"
            android:textColor="#a1a7bc"
            android:textSize="24px" />

        <EditText
            android:id="@+id/xiaoneiinfos_xuexiao_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="Cattle"
            android:textColor="#a1a7bc"
            android:textSize="24px" />

        <ImageButton
            android:id="@+id/xiaoneiinfos_xexiao_bt"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:src="@drawable/joinico" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/driver_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="院系"
            android:textColor="#a1a7bc"
            android:textSize="24px" />

        <EditText
            android:id="@+id/xiaoneiinfos_yuanxi_et"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:gravity="left"
            android:hint="教师"
            android:textColor="#a1a7bc"
            android:textSize="24px" />

        <ImageButton
            android:id="@+id/xiaoneiinfos_yuanxi_bt"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:src="@drawable/joinico" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/driver_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="班级"
            android:textColor="#a1a7bc"
            android:textSize="24px" />

        <EditText
            android:id="@+id/xiaoneiinfos_banji_et"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:gravity="left"
            android:hint="1班"
            android:textColor="#a1a7bc"
            android:textSize="24px" />

        <ImageButton
            android:id="@+id/xiaoneiinfos_banji_bt"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:src="@drawable/joinico" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/driver_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="入学年份"
            android:textColor="#a1a7bc"
            android:textSize="24px" />

        <EditText
            android:id="@+id/xiaoneiinfos_ruxuenianfen_et"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:gravity="left"
            android:hint="2014年"
            android:textColor="#a1a7bc"
            android:textSize="24px" />

        <ImageButton
            android:id="@+id/xiaoneiinfos_ruxuenianfen_bt"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:src="@drawable/joinico" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/driver_line" />

    <Button
        android:id="@+id/infos_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="#DE3332"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="28px" />

</LinearLayout>